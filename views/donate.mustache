<html>
    <head>
    </head>

    <body>
        {{>navbar}}

        <div class="container">
            <h1>DONATION PAGE</h1>
            <p>Please enter what you would like to donate</p>
        </div>

        <div class="container">
            <form method="post" role="/donate">
                <div class="form-group">
                    {{user-name-error}}
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter Food" required>
                </div>
                <div class="form-group">
                    <label for="quantity">Quantity</label>
                    <input type="number" class="form-control" id="quantity" name="quantity" placeholder="Enter quantity" required>
                </div>
                <div class="form-group">
                    <label for="weight">Weight (g)</label>
                    <input type="number" class="form-control" id="weight" name="weight" placeholder="Enter weight" required>
                </div>
                <div class="form-group">
                    <label for="dateHarvest">Harvest Date</label>
                    <input type="date" class="form-control" id="dateHarvest" name="dateHarvest" placeholder="Enter harvest date" required>
                </div>
                <div class="form-group">
                    <label for="dateExpiry">Expiry Date</label>
                    <input type="date" class="form-control" id="dateExpiry" name="dateExpiry" placeholder="Enter expiry date" required>
                </div>
                <div class="form-group">
                    <input type="submit" value="Donate" class="btn btn-primary">
                </div>
            </form>
        </div>
    </body>
</html>